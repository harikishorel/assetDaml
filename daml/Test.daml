module Test where

import Daml.Script

type CreateId = ContractId Create
type ViewId = ContractId View

template Create
  with
    manufacturer : Party
    retailer : Party 
    product : Text
    productId : Text
    warrantyPeriod : Text
    customerName : Text
    purchaseDate : Text
  where
    signatory manufacturer

    -- choice ReleaseItemTo : CreateId
    --     with
    --         dealer : Party
    --     controller manufacturer
    --     do 
    --         create this with
    --             retailer = dealer
        

    choice SellItemTo : CreateId
        with
            rightFulOwner : Text
            dateOfPurchase : Text
        controller retailer
        do 
            create this with
                customerName = rightFulOwner
                purchaseDate = dateOfPurchase
        

    choice Transfer : ViewId
        controller retailer
        do 
            create View with
                manufacturerInContract = manufacturer
                retailerInContract = retailer
                customerInContract = customerName
                buyDate = purchaseDate


template View
    with
        manufacturerInContract : Party
        retailerInContract : Party
        customerInContract : Text
        buyDate : Text
    
    where 
        signatory retailerInContract


setup : Script ViewId
setup = script do
    --assign Parties
    adani <- allocatePartyWithHint "Adani" (PartyIdHint "Adani")
    airtel <- allocatePartyWithHint "Airtel" (PartyIdHint "Airtel")
    --hk <- allocatePartyWithHint "HK" (PartyIdHint "HK")
    adaniId <- validateUserId "adani"
    airtelId <- validateUserId "airtel"
    --hkId <- validateUserId "hk"
    createUser (User adaniId (Some adani)) [CanActAs adani]
    createUser (User airtelId (Some airtel)) [CanActAs airtel]
    --createUser (User hkId (Some hk)) [CanActAs hk]

    --create a warrenty
    manufacturerProposal <- submit adani do
        createCmd Create with
            manufacturer = adani
            retailer = airtel
            product = "Iphone"
            productId = "No1"
            warrantyPeriod = "5 Years"
            customerName = "nil"
            purchaseDate = "nil"

    retailerProposal <- submit airtel do
        exerciseCmd manufacturerProposal SellItemTo
            with    
                rightFulOwner = "hk"
                dateOfPurchase = "11-02-2022"

    submit airtel do
        exerciseCmd retailerProposal Transfer

                
    
